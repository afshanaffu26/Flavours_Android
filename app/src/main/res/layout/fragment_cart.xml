<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CartFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:fadingEdge="horizontal|vertical|none"
            android:orientation="horizontal"
            android:padding="1pt"
            android:paddingLeft="1pt"
            android:paddingTop="1pt"
            android:paddingRight="1pt"
            android:paddingBottom="1pt"
            android:background="@drawable/border">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageView11"
                    android:layout_width="match_parent"
                    android:layout_height="130dp"
                    android:layout_marginTop="45dp"
                    android:src="@drawable/cake" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/ItemName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="80dp"
                    android:textColor="#000000"
                    android:text="Cake"
                    android:textSize="30dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textPrice"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="80dp"
                    android:text="3.50"
                    android:layout_marginLeft="4dp"
                    android:textColor="#000000"
                    android:textSize="30dp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.50">

            <EditText
                android:id="@+id/Promo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:layout_marginTop="10dp"
                android:textStyle="bold"
                android:inputType="textPersonName"
                android:text="Enter Your Promo Code" />


        </LinearLayout>
         </LinearLayout>
    <TextView
        android:id="@+id/subTotal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textSize="25dp"
        android:textColor="#000000"
        android:layout_marginTop="300dp"
        android:text="SubTotal" />

    <TextView
        android:id="@+id/Tax"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textSize="25dp"
        android:textColor="#000000"
        android:layout_marginTop="340dp"
        android:text="Tax" />
    <TextView
        android:id="@+id/DC"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textSize="25dp"
        android:textColor="#000000"
        android:layout_marginTop="380dp"
        android:text="Delivery Charges" />
    <TextView
        android:id="@+id/Total"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textSize="25dp"
        android:textColor="#000000"
        android:layout_marginTop="460dp"
        android:text="Total" />
    <TextView
        android:id="@+id/sTotal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textSize="25dp"
        android:textColor="#000000"
        android:layout_marginTop="300dp"
        android:layout_marginLeft="280dp"
        android:text="3.50" />

    <TextView
        android:id="@+id/TaxP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textSize="25dp"
        android:textColor="#000000"
        android:layout_marginTop="340dp"
        android:layout_marginLeft="280dp"
        android:text="1.25" />
    <TextView
        android:id="@+id/DCP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textSize="25dp"
        android:textColor="#000000"
        android:layout_marginTop="380dp"
        android:layout_marginLeft="280dp"
        android:text="1.25" />
    <TextView
        android:id="@+id/Tp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textSize="25dp"
        android:textColor="#000000"
        android:layout_marginTop="460dp"
        android:layout_marginLeft="280dp"
        android:text="6.00" />
    <Button
        android:id="@+id/btnCheckout"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="540dp"
        android:background="@color/myMainColor"
        android:text="CheckOut Order"
        android:textColor="#FFFFFF"
        android:textStyle="bold" />


</FrameLayout>