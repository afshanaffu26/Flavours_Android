<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    tools:context=".FeedbackFragment">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:text="Feedback"
        android:textColor="@color/myTextColor"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="50dp"
        android:text="Your review will help us to give you better experience. Make it a good one!"
        android:textColor="@color/myTextColor"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/editTextTextMultiLine"
        android:layout_width="match_parent"
        android:layout_marginTop="80dp"
        android:hint="Tell us your experience..."
        android:layout_height="200dp"
        android:ems="10"
        android:padding="10dp"
        android:gravity="start|top"
        android:background="#3051ca8e"
        android:layout_margin="10dp"
        android:inputType="textMultiLine" />
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="2"
    android:layout_marginTop="20dp"
    android:orientation="horizontal">
    <Button
        android:id="@+id/btnLogin"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:background="@color/colorWhite"
        android:text="Feedback"
        android:textColor="@color/myTextColor"
        android:layout_weight="1"
        android:textStyle="bold" />
    <Button
        android:id="@+id/btnSend"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:background="@color/myMainColor"
        android:text="Feedback"
        android:layout_weight="1"
        android:textColor="#FFFFFF"
        android:textStyle="bold" />
</LinearLayout>



</LinearLayout>
</FrameLayout>